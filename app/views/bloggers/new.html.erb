<%=  form_tag :blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :bio %>
    <%= f.text_field :bio , validation %>
    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.submit %>
<%end%>

# Attempt to hide/show button based on validation of text-fields

<#% if name_text_field_value != unique ? hide : show button %>
    <#%= f.submit style={if requirements_not_met ? "Show button" : "Hide"} %>